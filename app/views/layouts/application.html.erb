<!DOCTYPE html>
<html>
  <%= render 'layouts/head'%>

  <body class="d-flex flex-column h-100">
    <%= render 'layouts/header' %>

    <main class="mx-auto max-w-7xl items-center justify-between p-6 lg:px-8">
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
        
      <% end %>
      <%= yield %>
    </main>

    <%= render 'layouts/footer' %>
  </body>
</html>



